<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="anime"
            type="com.example.animeplayer.model.AnimeData" />
    </data>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:backgroundTint="@color/grey"
    app:cardCornerRadius="10dp"
    android:elevation="3dp"
    android:layout_marginTop="30dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp">
        <ImageView
            android:id="@+id/poster_id"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@color/black"
            android:contentDescription="@string/anime_image"
            app:layout_constraintTop_toTopOf="parent"
            animePoster = "@{anime.images.jpg.image_url}"/>
        <TextView
            android:id="@+id/title_id"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poster_id"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            animeTitle="@{anime.title}"
            />
        <TextView
            android:id="@+id/no_episodes_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_id"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            animeEpisodes="@{anime.episodes}"
            />
        <TextView
            android:id="@+id/rating_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/no_episodes_id"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            animeRating="@{anime.rating}"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
</layout>