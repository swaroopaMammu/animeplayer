<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="anime"
            type="com.example.animeplayer.model.AnimeData" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/appbar"
        layout="@layout/appbar_layout"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingVertical="@dimen/_dp10"
        android:paddingHorizontal="@dimen/_dp5"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            tools:context=".view.DetailFragment">
            <ImageView
                android:id="@+id/image_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_dp230"
                android:background="@color/black"
                android:visibility="gone"
                isVisible ="@{anime.trailer.youtube_id == null}"
                animePoster = "@{anime.images.jpg.image_url}"
                android:contentDescription="@string/anime_image"
                app:layout_constraintTop_toTopOf="parent"
                />
            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/youtubePlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                isVisible ="@{anime.trailer.youtube_id != null}"
                app:layout_constraintTop_toBottomOf="@+id/image_id"
                />
            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                app:layout_constraintStart_toStartOf="@+id/youtubePlayer"
                app:layout_constraintEnd_toEndOf="@+id/youtubePlayer"
                app:layout_constraintTop_toTopOf="@+id/youtubePlayer"
                app:layout_constraintBottom_toBottomOf="@+id/youtubePlayer"/>
            <View
                android:id="@+id/gap_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_dp20"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/youtubePlayer"
                app:layout_constraintBottom_toTopOf="@+id/episode_id"/>
            <TextView
                android:layout_marginHorizontal="@dimen/_dp10"
                android:id="@+id/episode_id"
                android:layout_width="@dimen/_dp0"
                animeEpisodes="@{anime.episodes}"
                android:textStyle="bold"
                android:textSize="@dimen/_sp16"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_dp10"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/gap_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/rating_id"
                animeRating="@{anime.rating}"
                android:layout_width="@dimen/_dp0"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_dp10"
                android:layout_marginTop="@dimen/_dp5"
                android:textColor="@color/black"
                android:textSize="@dimen/_sp16"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/episode_id" />

            <TextView
                android:layout_marginHorizontal="@dimen/_dp10"
                android:id="@+id/genre_id"
                android:layout_width="@dimen/_dp0"
                animeGenre="@{anime.genres}"
                android:textStyle="bold"
                android:textSize="@dimen/_sp16"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_dp5"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/rating_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:layout_marginHorizontal="@dimen/_dp10"
                android:id="@+id/main_cast_id"
                android:layout_width="@dimen/_dp0"
                animeProducers="@{anime.producers}"
                android:textStyle="bold"
                android:textSize="@dimen/_sp16"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_dp5"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/genre_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:layout_marginHorizontal="@dimen/_dp10"
                android:id="@+id/plot_text_id"
                android:layout_width="@dimen/_dp0"
                android:text="@string/plot_synopsis"
                android:textStyle="bold"
                android:textSize="@dimen/_sp16"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_dp5"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/main_cast_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:layout_marginHorizontal="@dimen/_dp10"
                android:id="@+id/plot_id"
                android:layout_width="@dimen/_dp0"
                android:text="@{anime.synopsis}"
                android:textStyle="bold"
                android:textSize="@dimen/_sp12"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/plot_text_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginVertical="@dimen/_dp10"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>